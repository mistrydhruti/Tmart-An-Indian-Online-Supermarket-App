<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpecialVideo">


    <RelativeLayout
        android:id="@+id/header"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:weightSum="10"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="SPECIAL OFFERS"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="9"
                android:gravity="center"
                android:fontFamily="@font/amiko"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:onClick="Go_to_home"
                android:src="@drawable/home_white"
                android:layout_height="match_parent"/>



        </LinearLayout>
    </RelativeLayout>

    <VideoView
        android:id="@+id/videoview"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        />
    <RelativeLayout
        android:id="@+id/prices_lower"
        android:layout_below="@+id/desc"
        android:layoutAnimation="@anim/layout_animation_down_to_up"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="450dp">

        <LinearLayout
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="3"
                android:weightSum="10"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:background="@color/white"
                    android:weightSum="5"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="4"
                        android:textSize="50dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial"
                        android:textColor="@color/colorAccent"
                        android:gravity="center|top"
                        android:text="PRICES LOWER"
                        android:layout_height="0dp"/>

                    <TextView
                        android:layout_weight="1"
                        android:text="THAN ANY SUPERMARKET"
                        android:gravity="center|top"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/deepblue"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:src="@drawable/curved_arrow"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="5.5"
                android:weightSum="6"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:weightSum="10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_weight="1"
                        android:text="SUPERMARKET BILL"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/amiko"
                        android:textColor="@color/deepblue"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:weightSum="5.5"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/Rs"
                            android:background="@color/deepblue"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="2"
                            android:background="@color/deepblue"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="5"
                            android:background="@color/deepblue"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="0"
                            android:background="@color/deepblue"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="0"
                            android:background="@color/deepblue"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_weight="7"
                        android:src="@drawable/cart_image1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_weight="3"
                        android:padding="5dp"
                        android:src="@drawable/versus"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:weightSum="10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_weight="1"
                        android:text="TMART BILL"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/amiko"
                        android:textColor="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:weightSum="5.5"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/Rs"
                            android:background="@color/colorAccent"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="2"
                            android:background="@color/colorAccent"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="0"
                            android:background="@color/colorAccent"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="0"
                            android:background="@color/colorAccent"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="0"
                            android:background="@color/colorAccent"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_weight="7"
                        android:padding="5dp"
                        android:src="@drawable/cart_tmart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>