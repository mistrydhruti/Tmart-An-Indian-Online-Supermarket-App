<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textStyle="normal"
            android:gravity="center"
            android:padding="5dp"
            android:fontFamily="@font/arial"
            android:text="By placing your order, you agree to Tmart's privacy notice and conditions of use."
            android:id="@+id/text_heading"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>


        <RelativeLayout
            android:layout_below="@+id/text_heading"
            android:gravity="center"
            android:id="@+id/place_order_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:weightSum="4"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:id="@+id/submit_btn"
                    android:fontFamily="@font/amiko"
                    android:background="@drawable/button_design"
                    android:text="PLACE YOUR ORDER"
                    android:textColor="#ffff"
                    android:textSize="18sp"
                    android:gravity="center"/>

            </LinearLayout>
        </RelativeLayout>



        <TextView
            android:id="@+id/order_summary_textview"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:fontFamily="@font/amiko"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/place_order_btn"
            android:text="Order Summary"
            android:layout_width="match_parent"
            android:layout_height="50dp"></TextView>


        <RelativeLayout
            android:id="@+id/order_summary"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_below="@+id/order_summary_textview"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <LinearLayout
                android:background="@drawable/linearlayout_design"
                android:orientation="vertical"
                android:weightSum="4.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1.5">

                    <LinearLayout
                        android:layout_weight="1.5"
                        android:weightSum="10"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4.1"
                            android:paddingLeft="5dp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/arial"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical"
                            android:text="Shipping to "
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:text=":"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_weight="5.6"
                            android:textSize="18sp"
                            android:fontFamily="@font/arial"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1.5"
                        android:weightSum="10"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4.1"
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/arial"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:text="Estimated delivery "
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:text=":"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_height="match_parent"/>


                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="5.6"
                            android:id="@+id/time"
                            android:layout_gravity="center"
                            android:fontFamily="@font/arial"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/lightpink"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_weight="3"
                    android:weightSum="3.5"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">


                    <LinearLayout
                        android:layout_weight="1"
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:paddingLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:text="Delivery "
                            android:fontFamily="@font/arial"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:text=":"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/Rs"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4.7"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="0"
                            android:fontFamily="@font/arial"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:layout_height="match_parent"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:paddingLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:text="Total "
                            android:fontFamily="@font/arial"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:text=":"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/Rs"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:id="@+id/finaltot"
                            android:layout_width="0dp"
                            android:layout_weight="4.7"
                            android:fontFamily="@font/arial"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_height="match_parent">

                            <TextView
                                android:textSize="20sp"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_width="0dp"
                                android:text="@string/Rs"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1.5"
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:paddingLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:textColor="@color/black"
                            android:text="Order Total  "
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/arial"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:text=":"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/Rs"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4.7"
                            android:textColor="@color/lightpink"
                            android:textSize="20sp"
                            android:fontFamily="@font/arial"
                            android:id="@+id/ordtot"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:fontFamily="@font/amiko"
            android:gravity="center"
            android:text="Shipping address"
            android:layout_below="@id/order_summary"
            android:id="@+id/shipping_address_textview"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <RelativeLayout
            android:layout_below="@id/shipping_address_textview"
            android:id="@+id/shipping_address"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:background="@drawable/linearlayout_design"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name1"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/arial"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/address"
                    android:scrollbars="vertical"
                    android:layout_weight="2"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/arial"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:text="Payment Information"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:layout_below="@id/shipping_address"
            android:fontFamily="@font/amiko"
            android:id="@+id/payment_info_textview"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <RelativeLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/payment_info"
            android:layout_below="@+id/payment_info_textview"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:weightSum="2"
                android:background="@drawable/linearlayout_design"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="2"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:fontFamily="@font/arial"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="Payment Method"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/paymethod"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:fontFamily="@font/arial"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:text="Delivery Details"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:fontFamily="@font/amiko"
            android:gravity="center"
            android:layout_below="@id/payment_info"
            android:id="@+id/delivery_details_textview"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <RelativeLayout
            android:id="@+id/delivery_details"
            android:gravity="center"
            android:layout_below="@+id/delivery_details_textview"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <LinearLayout
                android:weightSum="1"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/linearlayout_design"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/time1"
                    android:fontFamily="@font/amiko"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_height="0dp"/>

            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:text="Promo Code"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:fontFamily="@font/amiko"
            android:gravity="center"
            android:visibility="gone"
            android:layout_below="@id/delivery_details"
            android:id="@+id/promo_code_textview"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <RelativeLayout
            android:id="@+id/promo_code"
            android:gravity="center"
            android:visibility="gone"
            android:layout_below="@+id/promo_code_textview"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <LinearLayout
                android:weightSum="5"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/linearlayout_design"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/add_promo_code"
                    android:fontFamily="@font/amiko"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:paddingLeft="5dp"
                    android:text="Add promo code"
                    android:gravity="center_vertical|left"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/btn_promo_code"
                    android:fontFamily="@font/amiko"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="Add"
                    android:background="@drawable/button_design"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:text="Promo code applied!"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_below="@+id/promo_code"
            android:fontFamily="@font/amiko"
            android:id="@+id/applied_promo_text"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <RelativeLayout
            android:gravity="center"
            android:id="@+id/proceed"
            android:layout_below="@+id/applied_promo_text"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <LinearLayout
                android:weightSum="4"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/placeorder"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/button_design"
                    android:textColor="@color/white"
                    android:text="Proceed"
                    android:textSize="18sp"
                    android:fontFamily="@font/amiko"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</ScrollView>