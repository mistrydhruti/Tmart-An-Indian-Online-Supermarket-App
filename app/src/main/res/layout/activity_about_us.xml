<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:id="@+id/about_us_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="50dp">


                <TextView
                    android:text="      ABOUT US"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/amiko"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/home_white"
                    android:layout_height="match_parent"/>


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/who"
            android:layout_below="@id/about_us_rl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layoutAnimation="@anim/layout_animation_left_to_right"
            android:padding="5dp">

            <TextView
                android:text="WHO WE ARE?"
                android:textSize="18sp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:fontFamily="@font/arial"
                android:textColor="@color/deepblue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/about_us_img"
            android:gravity="center"
            android:layout_below="@id/who"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layoutAnimation="@anim/layout_animation_down_to_up"
            android:padding="5dp"
            >

            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:src="@drawable/about_us_img"
                    android:layout_height="match_parent"/>

                <TextView
                    android:text="We are two students from the third year of Bachelors in Information Technology."
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/arial"
                    android:layout_height="match_parent"/>


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/abouttheapp"
            android:layout_below="@id/about_us_img"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layoutAnimation="@anim/layout_animation_left_to_right"

            android:layout_height="40dp">

            <TextView
                android:text="ABOUT THE APP!"
                android:layout_width="match_parent"
                android:gravity="center_vertical|bottom"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/deepblue"
                android:textSize="18sp"
                android:fontFamily="@font/arial"
                android:layout_height="match_parent"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/build_img"
            android:gravity="center"
            android:layoutAnimation="@anim/layout_animation_down_to_up"
            android:layout_below="@id/abouttheapp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="5dp">

            <LinearLayout
                android:weightSum="10"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="@string/tmart"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/arial"
                    android:layout_height="match_parent"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="0dp"
                    android:src="@drawable/build"
                    android:layout_weight="5"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/desc"
            android:gravity="center_vertical"
            android:layout_below="@id/build_img"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layoutAnimation="@anim/layout_animation_down_to_up"
            android:padding="5dp">

            <TextView
                android:text="@string/app_desc"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="15sp"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/prices_lower"
            android:layout_below="@+id/desc"
            android:layoutAnimation="@anim/layout_animation_down_to_up"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="450dp">

            <LinearLayout
                android:weightSum="10"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="3"
                    android:weightSum="10"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:background="@color/white"
                        android:weightSum="5"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="4"
                            android:textSize="50dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/arial"
                            android:textColor="@color/colorAccent"
                            android:gravity="center|top"
                            android:text="PRICES LOWER"
                            android:layout_height="0dp"/>

                        <TextView
                            android:layout_weight="1"
                            android:text="THAN ANY SUPERMARKET"
                            android:gravity="center|top"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/deepblue"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:padding="5dp"
                        android:src="@drawable/curved_arrow"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="5.5"
                    android:weightSum="6"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:weightSum="10"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_weight="1"
                            android:text="SUPERMARKET BILL"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/amiko"
                            android:textColor="@color/deepblue"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>

                        <LinearLayout
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:weightSum="5.5"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                            <View
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/Rs"
                                android:background="@color/deepblue"
                                android:textSize="22sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="2"
                                android:background="@color/deepblue"
                                android:textSize="22sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="5"
                                android:background="@color/deepblue"
                                android:textSize="22sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0"
                                android:background="@color/deepblue"
                                android:textSize="22sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0"
                                android:background="@color/deepblue"
                                android:textSize="22sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_weight="7"
                            android:src="@drawable/cart_image1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:weightSum="5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_weight="3"
                            android:padding="5dp"
                            android:src="@drawable/versus"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:weightSum="10"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_weight="1"
                            android:text="TMART BILL"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/amiko"
                            android:textColor="@color/colorAccent"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>

                        <LinearLayout
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:weightSum="5.5"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/Rs"
                                android:background="@color/colorAccent"
                                android:textSize="22sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="2"
                                android:background="@color/colorAccent"
                                android:textSize="22sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0"
                                android:background="@color/colorAccent"
                                android:textSize="22sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0"
                                android:background="@color/colorAccent"
                                android:textSize="22sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0"
                                android:background="@color/colorAccent"
                                android:textSize="22sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_weight="7"
                            android:padding="5dp"
                            android:src="@drawable/cart_tmart"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

       <!-- <TextView
            android:text="The above illustration describes how tmart works better for people rather than a general store."
            android:layout_below="@+id/prices_lower"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>-->
    </RelativeLayout>

</ScrollView>